    #include <iostream>
    using namespace std;
     
    int main() {
     
        int n,i;
        int fact = 1;
        cout <<"Enter a number\n";
        cin >>n;
        for(i=1; i<=n; i++)
        {
        	fact = fact*i;
        }
        cout <<"The factorial is = "<<fact;
    	return 0;
    }
