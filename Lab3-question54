    #include <iostream>
    using namespace std;
     
    int main() {
     
    	int n,num,sum,i,j;
    	cout <<"Enter a number\n";
    	cin >>n;
    	cout <<"Perfect numbers are : \n";
    	for(i=1;i<=n;i++)
    	{
    		sum = 0;
    		for(j=1;j<i;j++)
    		{
    		if (i%j==0)
    		sum = sum+j;
    		}
    		if (sum==i)
    		cout <<i <<endl;
    	}
    	return 0;
    }
