#include <iostream>
using namespace std;

int main() {
	
	int i,siz;

	cout <<"Enter number of bits\n";
	cin >>siz;
	char bin[siz+1], out[siz+1];
	cout <<"Enter a number in binary\n";
	cin >>bin;
	for(i=0;i<siz;i++)
	{
		if (bin[i]=='1')
		out[i] = '0';
		if (bin[i]=='0')
		out[i] = '1';
	
	
		
	}
	cout <<"The complement of " <<bin <<" is " <<out;
	return 0;
}
